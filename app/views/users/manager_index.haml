.panel.panel-default

  .panel-heading
    用户管理&nbsp&nbsp&nbsp
    %button= link_to "+添加用户",add_user_path


  %table.table
    %tr
      %td(align="center")  编号
      %td(align="center")  用户名
      %td(align="center")   操作
    - @user.each do |p|
      - if p.name!="admin"
        %tr
          %td(align="center")= p.id
          %td(align="center")= p.name
          %td(align="center")
            =link_to "删除"
            =link_to " 修改密码"
  .right-padding(align="right")
    = will_paginate @user, :previous_label=> '<<', :next_label=> '>>'
