#login.boxed-group
  .panel.panel-default{:style => "width: 500px;margin-left: 450px;;margin-top: 90px"}
    .panel-body
      %h3 重置密码
      %p= link_to "用户登录", login_path, :style => "padding-left: 400px"
      = form_tag "/next_one" do
        .input-group
          %span.input-group-addon 帐号
          = text_field_tag :name, params[:name], :class => 'form-control', :placeholder => "请输入帐号"
        %p
          - if @err
            .alert.alert-danger
              =@err
        %p
        %p &nbsp
        %p
          = submit_tag "下一步", :style => "margin-left: 165px;width: 116px"