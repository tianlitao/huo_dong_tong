%ol.breadcrumb
  %li
    %a{:href => "/login"} 首页
  %li.active 修改用户密码
#login.boxed-group
  .panel.panel-default{:style => "width: 500px;margin-left: 450px;;margin-top: 90px"}
    .panel-body
      = form_for @user do |f|
        %p
        .input-group
          = f.label :帐号, :class => "input-group-addon", :style => "padding-left: 50px;padding-right: 50px"
          = f.text_field :name, :class => "form-control"
        %p
        .input-group
          = f.label :请设置密码, :class => "input-group-addon", :style => "padding-left: 30px;padding-right: 30px"
          = f.password_field :password, :class => "form-control"
        %p
        .input-group
          = f.label :请确认重复密码, :class => "input-group-addon", :style => "padding-left: 16px;padding-right: 16px"
          = f.password_field :password_confirmation, :class => "form-control"
        %p
          - if flash[:error]
            .alert.alert-danger
              =flash[:error]
        %p
          = submit_tag "登录", :style => "margin-left: 165px;width: 116px"