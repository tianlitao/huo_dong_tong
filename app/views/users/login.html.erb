<div class="boxed-group" id="login">
  <div class="panel panel-default" style="width: 500px;margin-left: 450px;;margin-top: 90px" >
    <div class="panel-body" >
      <h3>用户登录</h3>
      <p><%= link_to "用户注册", signup_path, :style => "padding-left: 400px" %></p>
      <%= form_tag "/create_login_session" do %>
          <div class="input-group" >
            <span class="input-group-addon" >帐号</span>
            <%= text_field_tag :name, params[:name], :class => 'form-control', :placeholder => "请输入帐号" %>
          </div>
          <p></p>
          <div class="input-group">
            <span class="input-group-addon">密码</span>
            <%= password_field_tag :password, params[:password], :class => 'form-control', :placeholder => "请输入密码" %>
          </div>
          <p></p>
          <p><%= link_to "忘记密码", login_path,:style => "padding-left: 400px" %></p>
          <p>
            <%= submit_tag "登录", :style => "margin-left: 165px;width: 116px" %>
          </p>
      <% end %>
    </div>
  </div>
</div>
